{
  "name": "ecl3d",
  "version": "1.0.0",
  "description": "Javascript library to facilitate the build and visualisation of 3D models",
  "main": "dist/index.js",
  "types": "index.ts",
  "scripts": {
    "test": "npm run tsc && jest",
    "build": "npm run tsc && npm run clean && npm run browserify",
    "tsc": "tsc",
    "clean": "@powershell rm -r -Force build",
    "browserify": "browserify browser.js -o build/ecl_3d.js",
    "uglify": "uglifyjs build/ecl_3d.js -o build/ecl_3d.min.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cmelange/ECL-3D-Components"
  },
  "keywords": [
    "3D",
    "javascript",
    "model"
  ],
  "author": "Cedric MÃ©lange",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cmelange/ECL-3D-Components/issues"
  },
  "homepage": "https://github.com/cmelange/ECL-3D-Components#readme",
  "dependencies": {
    "@jscad/csg": "git+https://github.com/cmelange/csg.js.git#ecl-v1.0",
    "@types/gl": "^4.1.0",
    "@types/node": "^12.12.24",
    "@types/uuid": "^3.4.6",
    "browserify": "^16.5.0",
    "gl": "^4.4.0",
    "pngjs": "^3.4.0",
    "three": "^0.113.2",
    "typescript-json-serializer": "^1.4.2",
    "uglify-js": "^3.7.4",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "jest": "^24.9.0"
  },
  "jest": {
    "testMatch": [
      "**/dist/test/**/*.js?(x)"
    ],
    "testEnvironment": "node"
  }
}
